<h1>Artikler</h1>
<div class="row">
    {{#each articles}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>Forfatter: {{authorId.displayName}}</p>
                <p>Oppsummering: {{summary}}</p>
                <p>Kategori: {{category}}</p>
                {{#if authorId.image}}
                <img src="{{authorId.image}}" alt="{{authorId.displayName}}" class="circle responsive-img">
                {{/if}}
                <a href="/articles/user/{{authorId._id}}" class="btn waves-effect waves-light blue darken-3">{{authorId.displayName}}</a>
            </div>
            <div class="card-action center-align">
                <a href="/articles/{{_id}}" class="btn blue">Les mer</a>
            </div>
        </div>
    </div>
    {{else}}
    <p class="no-articles">Ingen artikler Ã¥ finne.</p>
    {{/each}}
</div>
